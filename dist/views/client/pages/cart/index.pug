extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .container.my-3
    .row 
      .col-12 
        table.table.table-bordered
          thead 
            tr
              th STT 
              th Hình ảnh 
              th Tiêu đề 
              th Giá
              th Số lượng 
              th Tổng tiền 
              th Hành động
          tbody(list-tour)
            
        h5.mb-4(style="text-align: right;") Tổng đơn hàng: <span total-price>0</span>đ

        +box-head("Thông tin khách hàng")

    .row 
      .col-12     
        form(form-order)
          .form-group 
            label.mb-2(for="fullName") Họ và tên 
            input.form-control(
              id="fullName"
              name="fullName"
              required
            ) 
          .form-group 
            label.mb-2(for="phone") Số điện thoại
            input.form-control(
              id="phone"
              name="phone"
              required
            ) 
          .form-group 
            label.mb-2(for="note") Ghi chú
            textarea.form-control(
              id="note"
              name="note"
              rows="5"
            ) 
          .form-group
            button.btn.btn-success.mt-2(
              type="submit"
              style="width: 100%"
            ) Đặt Tour

block script 
  script(src="/js/cart.js") 